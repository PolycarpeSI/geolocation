pipeline{
    agent any
    tools {
        maven 'M2_HOME'
    }
    stages{
        stage("maven"){
            steps{
                sh "mvn clean validate compile install test package"
            }
            post{
                success{
                    echo "Success execution of Maven"
                }
                failure{
                    echo "Fail execution of Maven"
                }
            }
        }
        stage("upload artifact"){
            steps{
                sh 'curl -uadmin:APBZrJk8pn85wcNmx47z1AoGCFp -T \
                target/bio*.jar \
                "http://ec2-54-83-125-188.compute-1.amazonaws.com:8081/artifactory/geolocation/geo/bio_${BUILD_ID}.jar"'
            }
            post{
                success{
                    echo "Success upload artifact"
                }
                failure{
                    echo "Fail upload artifact"
                }
            }
        }
    }
}